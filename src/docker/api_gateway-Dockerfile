FROM microsoft/aspnetcore:1.1.2 AS base
WORKDIR /app
EXPOSE 8888

FROM microsoft/aspnetcore-build:1.1.2 AS build
WORKDIR /src
EXPOSE 8888
COPY . .

WORKDIR /src/NT.WebApi
RUN dotnet restore
RUN dotnet publish -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=build /app .
ENTRYPOINT ["dotnet", "NT.WebApi.dll"]
