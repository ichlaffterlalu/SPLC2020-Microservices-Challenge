FROM microsoft/aspnetcore-build:1.1.2
WORKDIR /src
EXPOSE 9999
COPY . .

WORKDIR /src/Services/NT.IdentityServer
RUN dotnet restore

WORKDIR /src/NT.Migrator
RUN dotnet restore

WORKDIR /src/NT.IdentityServer.Migrator
RUN dotnet restore

WORKDIR /src/NT.IdentityServer.Api
ENTRYPOINT ["dotnet", "run"]
