FROM microsoft/aspnetcore:1.1.2 AS base
WORKDIR /app
EXPOSE 80

FROM microsoft/aspnetcore-build:1.1.2 AS build
WORKDIR /src
EXPOSE 80
COPY . .

WORKDIR /src/Services/NT.CustomerService.Api
RUN dotnet restore
RUN dotnet publish -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=build /app .
ENTRYPOINT ["dotnet", "NT.CustomerService.Api.dll"]
