FROM microsoft/aspnetcore:1.1.2 AS base
WORKDIR /app
EXPOSE 8803

FROM microsoft/aspnetcore-build:1.1.2 AS build
WORKDIR /src
EXPOSE 8803
COPY . .

WORKDIR /src/Services/NT.CatalogService.Api
RUN dotnet restore
RUN dotnet publish -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=build /app .
ENTRYPOINT ["dotnet", "NT.CatalogService.Api.dll"]
