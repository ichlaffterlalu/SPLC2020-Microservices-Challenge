FROM microsoft/aspnetcore:1.1.2 AS base
WORKDIR /app
EXPOSE 8805

FROM microsoft/aspnetcore-build:1.1.2 AS build
WORKDIR /src
EXPOSE 8805
COPY . .

WORKDIR /src/Services/NT.PaymentService.Api
RUN dotnet restore
RUN dotnet publish -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=build /app .
ENTRYPOINT ["dotnet", "NT.PaymentService.Api.dll"]
